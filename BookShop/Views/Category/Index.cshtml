@model List<Category>
<partial name = "_Notification"/>
<h1>Here is my Category List</h1>
<a asp-controller="Category" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-square"></i> Create</a>
<table class="table table-bordered">
	<thead>
	<tr>
		<td>Name</td>
		<td>Description</td>
	</tr>
	</thead>
	<tbody>
		@foreach (var category in Model)
		{
		<tr>
			<td>
				@category.Name
			</td>
			<td>
				@category.Description
			</td>
			<td>
				@category.DisplayOrder
			</td>
			<td>
					<a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-primary"><i class="bi bi-pencil-square"></i>Edit</a>
					<a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger"><i class="bi bi-trash-fill">Delete</i>

			</a>
			</td>
		</tr>
		}
	</tbody>
	
</table>